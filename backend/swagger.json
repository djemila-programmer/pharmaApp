{
  "openapi": "3.0.0",
  "info": {
    "title": "Pharmacy Stock API",
    "version": "1.0.0",
    "description": "REST API for Pharmacy Stock & Sales Management"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "email": "admin@example.com",
                "password": "123456"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" }
        }
      }
    }
  }
}
